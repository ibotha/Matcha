<div class="container" id="holder">
	<h1 style="text-align: center;">Sign Up</h1>
	<% include ../partials/error %>
	<form method="POST" action="signup">
		<div class="form-group">
			<input type="email" class="form-control" id="email" name="email" placeholder="User@example.com" <%- locals.current ? ('value=' + current.email) : 'value=""'; %> >
		</div>
		<div class="form-group">
			<input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name" <%- locals.current ? ('value=' + current.first_name) : 'value=""'; %> >
		</div>
		<div class="form-group">
			<input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name" <%- locals.current ? ('value=' + current.last_name) : 'value=""'; %> >
		</div>
		<div class="form-group">
			<input type="password" class="form-control" id="pwd" name="password" placeholder="Password">
		</div>
		<div class="form-group">
			<input type="password" class="form-control" id="conf" name="confirm" placeholder="Confirm Password">
		</div>
		<div class="form-group">
			<label for="gender">Gender</label>
			<select class="form-control" id="gender" name="gender">
				<% if (locals.current) switch (current.gender) { case 'Male': %>
					<option>Male</option>
					<option>Female</option>
					<option>Other</option>
				<% break; %>
				<% case 'Female': %>
					<option>Male</option>
					<option selected="selected">Female</option>
					<option>Other</option>
			  	<% break; %>
				<% case 'Other': %>
					<option>Male</option>
					<option>Female</option>
					<option selected="selected">Other</option>
				<% break; %>
				<% default: %>
					<option>Male</option>
					<option>Female</option>
					<option>Other</option>
				<% break; } else { %>
					<option>Male</option>
					<option>Female</option>
					<option>Other</option>
				<% } %>
			</select>
		</div>
		<div class="form-group">
			<label for="preference">Sexuality</label>
			<select class="form-control" id="preference" name="preference">
				<% if (locals.current) switch (current.preference) { case 'Male': %>
					<option>Male</option>
					<option>Female</option>
					<option>Other</option>
				<% break; %>
				<% case 'Female': %>
					<option>Male</option>
					<option selected="selected">Female</option>
					<option>Other</option>
			  	<% break; %>
				<% case 'Other': %>
					<option>Male</option>
					<option>Female</option>
					<option selected="selected">Other</option>
				<% break; %>
				<% default: %>
					<option>Male</option>
					<option>Female</option>
					<option>Other</option>
				<% break; } else { %>
					<option>Male</option>
					<option>Female</option>
					<option>Other</option>
				<% } %>
			</select>
		</div>
<!--		<div class="form-group">
			<label for="interest">What Do You Like?</label>
			<div id="interestscont"></div>
		</div>
		<div class="form-group">
			<input class="form-control" id="interest">
			<div id="add">Add</div>
		</div>
		<div class="form-group">
			<label for="bio">Who Are You</label>
			<textarea class="form-control" id="bio" rows="3"><%- locals.current ? current.bio : ''; %></textarea>
		</div>  -->
		<button type="submit" class="btn btn-primary">Submit</button>
		<a href="./login">Or Log In</a>
	</form>
	<script type="text/javascript" src="control/addinterest.js"></script>
</div>